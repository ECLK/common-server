{
    "swagger": "2.0",
    "info": {
        "description": "Election related information repository.",
        "version": "1.0.0",
        "title": "Election Common Server"
    },
    "host": "localhost:8001",
    "basePath": "/api/v1",
    "schemes": ["http", "https"],
    "produces": ["application/json"],
    "paths": {
        "/users": {
            "post": {
                "tags": ["users"],
                "summary": "Add new user",
                "parameters":[
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User object to be saved",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "OK"
                    },
                    "405": {
                        "description": "Invalid input"
                    }
                },
                "content": {
                    "application/json": {}
                }
            },
            "get": {
                "tags": ["users"],
                "summary": "Get all users",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad request"
                    }
                },
                "parameters": []
            }
        },
        "/users/{userId}": {
            "get":{
                "tags":["users"],
                "summary": "Find user by User ID",
                "operationId": "getUserById",
                "parameters":[
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "ID of user to return",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "Invalid ID"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "isActive": {
                    "type": "boolean",
                    "description": "User Status"
                }
            }
        }
    }
}